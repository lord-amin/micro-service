<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
          http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target/</directory>
            <outputDirectory>/</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>config/*</include>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>config/sonar-project.properties</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/setup</directory>
            <outputDirectory>/</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>*.json</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/install/jar.conf</source>
            <outputDirectory>/</outputDirectory>
            <destName>${artifactId}-${version}.conf</destName>
        </file>
        <file>
            <source>target/install/install.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>install.sh</destName>
        </file>
        <file>
            <source>target/install/env.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>env.sh</destName>
        </file>
        <file>
            <source>target/run-scripts/permission-importer.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>permission-importer.sh</destName>
        </file>
        <file>
            <source>src/main/setup/local_policy.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>local_policy.jar</destName>
        </file>
        <file>
            <source>src/main/setup/US_export_policy.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>US_export_policy.jar</destName>
        </file>
        <!--<file>-->
        <!--<source>src/main/setup/*.json</source>-->
        <!--<outputDirectory>/</outputDirectory>-->
        <!--<destName>*.json</destName>-->
        <!--</file>-->
    </files>
</assembly>
